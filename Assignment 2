using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {
            double PI = 3.14159,
                   radius = 18,
                   circumference = 2 * PI * radius;
            Console.WriteLine("It is " + circumference + " that is your circle's circumference");
            Console.Read(); 
        }
    }
}
